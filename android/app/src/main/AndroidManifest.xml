<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ppl.pmotrainingapps">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoitb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login.LoginActivity">

        </activity>
        <activity android:name=".Main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Firebase.FCMService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".Firebase.FirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".content.Content" />

        <service
            android:name=".Login.UserGetterService"
            android:exported="false" />
        <service
            android:name=".Home.QuoteGetterService"
            android:exported="false" />
        <activity android:name=".calendar.EventActivity"></activity>
        <activity android:name="ppl.pmotrainingapps.PDF.PDFActivityExample"></activity>
        <activity android:name="ppl.pmotrainingapps.PDF.PDFViewer"></activity>

            android:exported="false" />

        <activity android:name=".berita.BeritaActivity">

        </activity>
        <activity android:name=".calendar.CalendarDetail"/>
    </application>

</manifest>